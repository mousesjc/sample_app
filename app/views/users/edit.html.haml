%h1 Edit user
= form_for(@user) do |f|
  = render 'shared/error_messages', :object => f.object
  %div{:class => "field"}
    = f.label :name
    %br/
    = f.text_field :name
  %div{:class => "field"}
    = f.label :email
    %br/
    = f.text_field :email
  %div{:class => "field"}
    = f.label :password
    %br/
    = f.password_field :password
  %div{:class => "field"}
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %div{:class => "action"}
    = f.submit "Update"
%div
  = gravatar_for @user
  %a{ :href => "http://gravatar.com/emails", :target => '_blank' } change
  