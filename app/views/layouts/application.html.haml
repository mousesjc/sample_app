!!! html
%html
  %head
    %title= title
    = csrf_meta_tag
    = render "layouts/stylesheets"
    = javascript_include_tag :defaults
  %body
    %div{:class => "container"}
      = render "layouts/header"
      %section{ :class => "round"}
        - flash.each do |key,value|
          %div{:class => "flash #{key}"} #{value}
        = yield
      = render "layouts/footer"
      = debug(params) if Rails.env.development?